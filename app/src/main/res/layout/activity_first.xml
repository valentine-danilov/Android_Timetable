<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button android:id="@+id/first_c"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/first_course" />
    <Button android:id="@+id/scnd_c"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/second_course"/>

    <Button android:id="@+id/thrd_c"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/third_course" />

    <Button android:id="@+id/frth_c"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/forth_course" />
</LinearLayout>